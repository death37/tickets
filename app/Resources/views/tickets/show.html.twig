{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ticket</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ ticket.users.username }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if ticket.createdAt %}{{ ticket.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Editedat</th>
                <td>{% if ticket.editedAt %}{{ ticket.editedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ ticket.priority }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{% if ticket.state %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Picture</th>
                {% for image in ticket.images %}
                <td class="zoom">
                    <p>
                        <a data-fancybox="gallery" href="/images/tickets/{{ image.imageName }}"><img src="/images/tickets/{{ image.imageName }}" width="200"></a>
{#                    <img class="materialboxed responsive-img" src="/images/tickets/{{ image.imageName }}" width="200">#}
                    </p>
                </td>
                {% endfor %}
            </tr>
            <tr>
                <th>Problem</th>
                <td>{{ ticket.problem }}</td>
            </tr>
        </tbody>
    </table>
<div id="presidents">Loading...</div>

<!-- Insert this at the end of your body element, but before the closing tag -->
<script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
<script>
$(function() {
    $('#presidents').initDataTables({{ datatable_settings(datatable) }});
});
</script>
    <ul>
        <li>
            <a href="{{ path('tickets_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
