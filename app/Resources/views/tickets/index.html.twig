{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Title</th>
                <th>Createdat</th>
                <th>Editedat</th>
                <th>Priority</th>
                <th>State</th>
                <th>Picture</th>
                <th>Problem</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('tickets_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
{#                <td>{{ ticket.request }}</td>#}
                <td>{{ ticket.title }}</td>
                <td>{% if ticket.createdAt %}{{ ticket.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if ticket.editedAt %}{{ ticket.editedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ ticket.priority }}</td>
                <td>{% if ticket.state %}Yes{% else %}No{% endif %}</td>
                <td>{{ ticket.picture }}</td>
                <td>{{ ticket.problem }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tickets_show', { 'id': ticket.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tickets_new') }}">Create a new ticket</a>
        </li>
    </ul>
{% endblock %}
